{
  "name": "demo_handson",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^2.14.0",
    "@sap/cds": "^6",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.19",
    "@sap/xssec": "^3",
    "axios": "^1.3.4",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.17",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.4"
  },
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "start": "cds run",
    "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-mitigations": "cds watch --open mitigations/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy demo_handson --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-suppliers": "cds watch --open suppliers/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/risks",
    "app/mitigations",
    "app/suppliers"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      },
      "db": {
        "kind": "sql"
      },
      "ZGWDEMO": {
        "kind": "odata-v2",
        "model": "srv/external/ZGWDEMO",
        "[production]": {
          "credentials": {
            "destination": "ES5",
            "path": "/sap/opu/odata/iwbep/GWDEMO"
          }
        }
      },
      "ZSEPMRA_PROD_MAN": {
        "kind": "odata-v2",
        "model": "srv/external/ZSEPMRA_PROD_MAN",
        "[production]": {
          "credentials": {
            "destination": "ES5",
            "path": "/sap/opu/odata/sap/SEPMRA_PROD_MAN"
          }
        }
      }
    }
  }
}